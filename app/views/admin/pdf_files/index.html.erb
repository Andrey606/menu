<div class="container">
  <h1 class="text-center">Manage PDF Files</h1>

  <%= link_to "New pdf file", new_admin_pdf_file_path, class: "btn btn-primary mb-3" %>

  <% if @pdf_files.any? %>
    <ul class="list-group">
      <% @pdf_files.each do |pdf_file| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= link_to pdf_file.name, pdf_file.file_url, class: "open-pdf-link", target: "_blank" %>
          <%= pdf_file.locale %>
          <%= button_to "Delete", admin_pdf_file_path(pdf_file), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No PDF files uploaded.</p>
  <% end %>
</div>
